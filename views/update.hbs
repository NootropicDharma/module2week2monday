<h2>Create a Book</h2>

<form action="/books/{{book._id}}/edit" method="POST">
    <label>Title:
        <input type="text" name="title" value="{{book.title}}">
    </label>
    
    <lable>Author:
        <input type="text" name="author" value="{{book.author}}">
    </lable>
    
   <lable>Description:
        <textarea name="description" cols="30" rows="4">{{book.description}}</textarea>
   </lable>
 
   <lable>rate:
         <input type="number" name="rating" min="1" max="10" value="{{book.rating}}">
   </lable>
  

   <button type="submit">Update</button>

</form>